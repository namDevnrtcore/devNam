            <div class="row flex-column-reverse flex-lg-row">

                <div class="col-lg-12">
                    <div class="blog-wrapper">
                        <div class="row mb-n6">
                            @foreach (var tinTuc in Model)
                            {
                                <div class="col-md-6 col-12 mb-6">

                                    <div class="blog-list blog-grid-single-item blog-color--golden" data-aos="fade-up" data-aos-delay="0">
                                        <div class="image-box">
                                            <a href="@Url.Action("ChiTietTinTuc", "Home", new { id = tinTuc.ID })" class="image-link">
                                                <img class="img-fluid" src="@tinTuc.IMG" alt="">
                                            </a>
                                        </div>
                                        <div class="content">
                                            <h6 class="title">
                                                <a href="@Url.Action("ChiTietTinTuc", "Home", new { id = tinTuc.ID })">@tinTuc.TieuDe</a>
                                            </h6>
                                            <p>@Html.Raw(tinTuc.NoiDungTT)</p>
                                            <a href="@Url.Action("ChiTietTinTuc", "Home", new { id = tinTuc.ID })" class="read-more-btn icon-space-left">Đọc thêm<span class="icon"><i class="ion-ios-arrow-thin-right"></i></span></a>
                                        </div>
                                    </div>

                                </div>
                            }


                        </div>
                    </div>

                </div>
            </div>
        </div>
