<script>
 


    $(document).ready(function () {
        // ... your existing code ...

        // Handle click event for the update button
        $('#gridTable tbody').on('click', 'button.btn-primary', function () {
            var row = $(this).closest('tr');
            var productId = row.attr('id');

            // Redirect to the update page or show a modal for update
            window.location.href = '/Home/UpdateTinTuc/' + productId; // Replace 'YourController' with your actual controller name
        });
    });



    $(document).ready(function () {
        // Handle delete button click
        $('.btn-delete').on('click', function () {
            var itemId = $(this).data('id');

            // Confirm before deletion
            if (confirm('Bạn chắc chắn muốn xóa tin tức?')) {
                // Send AJAX request to the controller
                $.ajax({
                    url: '/Home/DeleteTintuc',  // Update with your controller and action
                    type: 'POST',
                    data: { id: itemId },
                    success: function (result) {
                        alert('Xóa thành công.');
                        location.reload();
                    },
                    error: function () {
                        alert('Xóa thất bại.');
                       
                    }
                });
            }
        });
    });
</script>
