<script>
    $(document).ready(function () {
        // Initialize DataTable with custom options
        var dataTable = $('#gridTable').DataTable({
            "pageLength": 5,
            "lengthMenu": [2, 5, 10, 25],
            "dom": '<"top"lf>rt<"bottom"ip><"clear">',
            "language": {
                "search": "Tìm kiếm:",
                "paginate": {
                    "first": "Đầu",
                    "last": "Cuối",
                    "next": "Tiếp",
                    "previous": "Trước"
                },
                "lengthMenu": "Hiển thị _MENU_ dòng mỗi trang"
            }
        });

        // Custom styling for the search input
        $('div.dataTables_wrapper input[type="search"]').addClass('form-control');

       
        $('#gridTable tbody').on('click', 'button.btn-danger', function () {
            var row = $(this).closest('tr');
            var productId = row.attr('id');

            // Confirm deletion
            if (confirm('Bạn có chắc muốn xóa sản phẩm này không?')) {
                // Send productId to the controller using AJAX
                $.ajax({
                    url: '/Home/DeleteProduct/' + productId, // Replace 'YourController' with your actual controller name
                    type: 'POST',
                    success: function (result) {
                        alert('Đã xóa thành công !');
                        dataTable.row(row).remove().draw();
                    },
                    error: function (error) {
                        console.error('Error deleting product:', error);
                        alert('Đã xảy ra lỗi khi xóa sản phẩm.');
                    }
                });
            }
        });
    });


    $(document).ready(function () {
        // ... your existing code ...

        // Handle click event for the update button
        $('#gridTable tbody').on('click', 'button.btn-primary', function () {
            var row = $(this).closest('tr');
            var productId = row.attr('id');

            // Redirect to the update page or show a modal for update
            window.location.href = '/Home/UpdateProduct/' + productId;
        });
    });


    $(document).ready(function () {
        // ... your existing code ...

        // Handle click event for the update button
        $('#gridTable tbody').on('click', 'button.btn-success', function () {
            var row = $(this).closest('tr');
            var productId = row.attr('id');

            // Redirect to the update page or show a modal for update
            window.location.href = '/Home/EditIMG/' + productId;
        });
    });

</script>
