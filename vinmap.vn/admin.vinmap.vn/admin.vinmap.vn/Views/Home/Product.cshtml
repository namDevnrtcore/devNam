                        </thead>
                        <tbody>
                            @for (var i = 0; i < Model.Count; i++)
                            {
                                <tr id="@Model[i].ID">

                                    <td>@(i + 1)</td>
                                    <td>@Model[i].TenSP</td>
                                    <td>@Model[i].GiaSP</td>
                                    <td>@Model[i].LoaiSP</td>
                                    <td><img src="@Model[i].IMG" alt="Product Image" style="max-width: 50px; max-height: 50px;" /></td>

                                    <td>
                                        <button class="btn btn-danger" data-toggle="tooltip" data-placement="top" title="Xóa">
                                            <i class="tio-delete"></i>
                                        </button>
                                        <!-- Add a button for editing -->
                                        <button class="btn btn-primary btn-update" data-toggle="tooltip" data-placement="top" title="Sửa">
                                            <i class="tio-edit"></i>
                                        </button>
                                        <button class="btn btn-success btn-update" data-toggle="tooltip" data-placement="top" title="Sủa ảnh">
                                            <i class="tio-update"></i>
                                        </button>

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>



              
            </div>
          
        </div>







    </main>

    <script src="~/assets\js\vendor.min.js"></script>



    <!-- JS Front -->
    <script src="~/assets\js\theme.min.js"></script>

    <!-- JS Plugins Init. -->

</body>
